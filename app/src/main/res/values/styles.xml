<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GlobalText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="fragmentBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingHorizontal">@dimen/default_padding</item>
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="buttonRoundedBlack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:layout_marginEnd">7dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_rounded_black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="buttonRoundedWhite">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:layout_marginEnd">7dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_rounded_white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="buttonAddToFavorites">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/button_round</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="buttonImageOnly">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <style name="imageRatingStarEmpty">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/small_margin</item>
        <item name="android:src">@drawable/ic_start_empty</item>
    </style>
</resources>